private:
    // --> OD 2009-07-14 #i73249#
    ::rtl::OUString msTitle;
    ::rtl::OUString msDesc;
    // <--

protected:

    virtual ~SwAccessibleTextFrame();

public:

    SwAccessibleTextFrame( SwAccessibleMap* pInitMap, const SwFlyFrm* pFlyFrm );

    virtual void Modify( SfxPoolItem *pOld, SfxPoolItem *pNew);


    //=====  XAccessibleContext  ==============================================

